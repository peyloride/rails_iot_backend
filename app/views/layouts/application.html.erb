<!DOCTYPE html>
<html>
  <head>
    <title>RailsIotBackend</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
          <%= bootstrap_flash %>

    <%= nav_bar static: :top, brand: "Rails IoT Sensor" do %>
      <%= menu_group do %>
          <%= menu_item "Home", sensors_path %>
          <%= menu_item "About Us", sensors_path %>
        <% end %>

        <%= menu_group pull: :right do %>
          <% if current_user %>
            <%= menu_item "Log Out", destroy_user_session_path(@user), method: :delete %>
          <% else %>
            <%= menu_item "Sign Up", new_user_registration_path %>
            <%= menu_item "Sign In", user_session_path %>
          <% end %>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
